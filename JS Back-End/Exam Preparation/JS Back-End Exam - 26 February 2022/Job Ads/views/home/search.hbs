<form class="search" method="POST">
    <input type="search" name="email" value="" placeholder="Search email...">
    <button type="submit" class="btn-search">
        <!-- Do not forget to change the path to the image -->
        <img src="/img/search-icon.png" alt="search-icon">
        Search
    </button>
</form>

<section id="search-page">
    <h2>Search result:</h2>
    {{#if filterJobs}}
        {{#each filterJobs}}
            {{> search-job-card-template}}
        {{/each}}
    {{else if notMatchFound}}
        <article class="search-page-no-result">
            <p class="search-page-no-result-message">No match found.</p>
        </article>
    {{/if}}
</section>