<section class="profile col-md-6 text-center col-lg" id="profile-page">
    <div class="profile-container">
        <img class="profile-img" src="/images/male.png">
        <p>Email: <span>{{user.email}}</span></p>
    </div>
    <div class="profile-info">
        <p>Trips History: <span>{{tripHistory}}</span> counts</p>

        <div class="trips-info">
            {{#if myTrip}}
                {{#each myTrip}}
                    <p>from <span>{{stratPoint}}</span> to <span>{{ednPoint}}</span> on <span>{{date}}</span> at
                        <span>{{time}}</span></p>
                {{/each}}
            {{else}}
                <p>there are no offer trips yet...</p>
            {{/if}}
        </div>

    </div>
</section>