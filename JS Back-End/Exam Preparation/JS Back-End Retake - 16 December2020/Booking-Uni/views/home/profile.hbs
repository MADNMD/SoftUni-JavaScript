<section id="viewhotelDetails">
    <div class="profile"><img src="/img/profile.png" alt="default user">
        <h3>User Info:</h3>
        <div class="flex">
            <p>Username: </p>
            <p>{{username}}</p>
        </div>
        <div class="flex">
            <p>Email: </p>
            <p>{{email}}</p>
        </div>
        <div class="flex">
            <p>Reservations: </p>
            {{#if hotelsReservation}}
                 <p>{{hotelsReservation}}</p>
            {{else}}
                 <p>No booking yet</p>    
            {{/if}}    
        </div>
    </div>
</section>