<div class="container">
    <div class="col-9">

        <!-- Start Pet Photo Post Section -->
        <div class="card">
            <div class="top">

                <!-- Start User Details and Image Location Section -->
                <div class="userDetails">

                    <!-- Link to User Profile Details Page-->
                    <div>
                        <div class="profilepic">
                            <div class="profile_img">
                                <div class="image">
                                    <img src="/images/person.png" alt="img8">
                                </div>
                            </div>
                        </div>
                    </div>
                    <h3>

                        <!-- Link to User Profile Details Page -->
                        <p>
                            <!-- User's username -->
                           {{owner.username}}
                        </p>
                        <!-- photo's location -->
                        <span>{{location}}</span>

                        {{#if isOwner}}
                        <div class="edit-delete-btns">

                            <a href="/photo/edit/{{_id}}">
                                <img class="edit-img" src="/images/edit-pen-icon-6.jpg" alt="edit button">
                            </a>

                            <a href="/photo/delete/{{_id}}">
                                <img class="bin-img" src="/images/icon-remove-22.jpg" alt="bin button">
                            </a>
                        </div>
                        {{/if}}
                    </h3>
                </div>

            </div>

            <!-- Start Pet Photo -->
            <div class="imgBx">
                <!-- Pet Photo -->
                <img src="{{image}}" alt="post" class="cover">
            </div>

            <div class="bottom">

                <p class="message">
                    <b class="petDescription">{{description}}</b>
                </p>

                <div class="pet-details">
                    <p class="petName">Name: {{name}}</p>
                    <p class="petAge">Age: {{age}}</p>
                </div>

                {{#if user}}
                    <div class="comments">
                        <div class="comments-top">
                            {{#each comments}}
                                {{> comment-card-template}}
                            {{/each}}

                        </div>
                    </div>
                {{/if}}
            </div>
            {{#if user}}
                {{#unless isOwner}}
                    <div class="addComments">
                        <form method="POST" action="/photo/comments/{{_id}}">
                            <textarea id="comment-textarea" name="message" cols="40" rows="10" placeholder="Add comment..."></textarea>
                            <button type="submit">Post</button>
                        </form>
                    </div>
                {{/unless}}
            {{/if}}
        </div>
    </div>
</div>