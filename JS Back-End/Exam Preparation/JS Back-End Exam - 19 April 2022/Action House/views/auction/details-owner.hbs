<!-- Details Page - Auction owner -->
<section id="catalog-section">

    <h1 class="item">
        {{title}}
        {{#if isOwner}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/auction/edit/{{_id}}">Edit</a>
            <a class="action pad-small f-left" href="/auction/delete/{{_id}}">Delete</a>
        </div>
        {{/if}}
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{category}}</strong></p>
                <p>{{description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{price}}</strong>
                    </div>

                    {{#if isOwner}}
                        <div>
                            {{#if bidder}}
                                Bid by <strong>{{bidder.firstName}} {{bidder.lastName}}</strong>
                                <a class="action pad-med cta" href="/auction/close/{{_id}}">Close Auction</a>
                            {{else}}
                                No bid
                            {{/if}}
                        </div>
                    {{else}}
                        {{#if user}}
                            {{#if canBid}}
                                <form class="vertical" method="POST" action="/auction/bid/{{_id}}">
                                    <label><span>Bid amount</span><input type="number" name="bidAmount"></label>
                                    <input class="action" type="submit" value="Place bid">
                                </form>
                            {{else}}
                                <div>
                                    You are currently the <strong>highest bidder</strong> for this auction
                                </div>
                            {{/if}}
                        {{/if}}
                    {{/if}}
                </div>

            </div>
        </div>

        <footer>Listed by {{author.firstName}} {{author.lastName}}</footer>
    </div>

</section>