<section id="deatils-page">
    <div class="wrapper">
        <div class="product-img">
            <img src="{{homeImage}}">
        </div>
        <div class="product-info">
            <div class="product-text">
                <div class="product-text">
                    <h1>Name: {{name}}</h1>
                    <h2>Type: {{type}}</h2>
                    <h4>Year: {{year}}</h4>
                    <h4>City: {{city}}</h4>
                    <p>Description: {{propertyDescription}}</p>

                    {{#if nameRented}}
                        <p>People rented this housing: {{nameRented}}</p>
                    {{else}}
                        <p>People rented this housing: There are no tenants yet.</p>
                    {{/if}}
                </div>
            </div>

            {{#if user}}
                <div class="product-btn">
                    {{#if isOwner}}
                        <a href="/offer/edit/{{_id}}" class="edit">Edit</a>
                        <a href="/offer/delete/{{_id}}" class="remove">Delete</a>
                    {{else}}
                        {{#if isAvailable}}
                            <p class="alRentHome">You have already rent this home</p>
                        {{else if isNotAvailable}}
                            <p class="no-housing">No Housing Available!</p>
                        {{else}}    
                            <a href="/offer/available/{{_id}}" class="rentHome">Rent a home, available {{availablePieces}} housing</a>
                        {{/if}}
                    {{/if}}
                </div>
            {{/if}}
        </div>
    </div>
</section>